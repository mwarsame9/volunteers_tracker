<h1><%= @project.name() %></h1>

<% if @project.volunteers(@project.id()).any?() %>
  <h3>Here are all the volunteers for this project:</h3>

  <ul>
    <% @project.volunteers(@project.id()).each() do |volunteer| %>
      <%= "<li>#{volunteer.name()}</li>" %>
    <% end %>
  </ul>

<% else %>
  <p>There are no volunteers for this project!</p>
<% end %>

<h3>Add a volunteer to <%= @project.name() %> </h3>

<p><a href="/projects/<%= @project.id() %>/edit">Edit <%= @project.name() %></a></p>
<p><a href="/">Return to Main Page</a></p>

<hr>

<div class="container">
  <a href="/">Home</a>
  <a href="/projects">View All Projects</a>
  <a href="/projects/new">Add New Project</a>
  <a href="/projects/new">Add New Volunteer</a>
</div>
