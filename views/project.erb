<h1><%= @project.name() %></h1>

<% if @project.volunteers(@project.id()).any?() %>
  <h3>Here are all the volunteers for this project:</h3>


<% else %>
  <p>There are no volunteers for this project!</p>
<% end %>

<h3>Add a volunteer for <%= @project.name() %> </h3>

<form action="/volunteers_add" method="post">

  <input id="project" name="project" type="hidden" value="<%= @project.name() %>">
  <input id="project_id" name="project_id" type="hidden" value="<%= @project.id() %>">

  <label for="volunteer_name">Name of the Volunteer:</label>
  <input id="volunteer_name" name="volunteer_name" type="text">

  <button type="submit">Add Volunteer</button>
</form>
<a href="/" class="btn btn-info">Back</a>
