<h1>All Projects</h1>

<% if @projects == [] %>
<p>There are currently no projects in the database</p>
<p><a href="/project_form">Click to create a new project</a></p>
<% else %>
<ol>
  <% @projects.each do |project| %>
  <li><a href="/project/<%= project.id %>"><%= project.name %></a></li>
  <% end %>
</ol>
<% end %>
